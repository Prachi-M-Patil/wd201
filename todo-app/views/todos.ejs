<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="csrf-token" content="<%= csrfToken %>">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./css/styles.css">
  <script>
    var token = document
      .querySelector('meta[name="csrf-token"]')
      .getAttribute('content')

    function updateTodo(id, completed) {
      fetch(`/todos/${id}`, {
        method: 'put',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({
          "_csrf": token,
          completed
        })
      })
      .then((res) => {
        if (res.ok){
          window.location.reload();
        }
      })
      .catch((err) => console.error(err))
    }

    function deleteTodo(id){
      fetch(`/todos/${id}`, {
        method: 'delete',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({
          "_csrf": token
        })
      })
      .then((res) => {
        if (res.ok) {
          window.location.reload()
        }
      })
      .catch ((err) => console.error(err)) 
    }

    function validateForm() {
      // Get the input values
      var title = document.getElementById('title').value;
      var date = document.getElementById('dueDate').value;
      
      // Check if any field is empty
      if (title === '' || date === '') {
        alert('Please fill in all the fields.');
        return false;
      }
    }
  </script>
  <script src="https://cdn.tailwindcss.com"></script>
  <title>To-Do Manager</title>
</head>
<body>
  <div class="grid grid-cols-6">
    <div class="col-start-3 col-span-2">

<!-- Header section -->

      <%- include('header.ejs') %>
      <a href="/signout">Signout</a>

<!-- Add Todo -->
      <% if(messages && messages.error && messages.error.length > 0)  { %>
        <% for(var i=0; i<messages.error.length; i++) { %>
                <li> <%= messages.error[i] %></li>
        <% } %>
      <% } %>
      <%- include('addTodo.ejs') %>

<!-- List Todos  and delete-->

      <%- include('todo.ejs', {content: 'Overdue', data: overdue, id:'overdue'}) %>
      <%- include('todo.ejs', {content: 'Due Today', data: dueToday, id:'due-today'}) %>
      <%- include('todo.ejs', {content: 'Due Later', data: dueLater, id:'due-later'}) %>
      <%- include('todo.ejs', {content: 'Completed Items', data: completedItems, id:'completed-items'}) %>

    </div>
  </div>
<!-- Footer section -->

  <%- include('footer.ejs') %>

</body>
</html>
